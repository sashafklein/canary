!!!
%html
  %head
    %meta{ charset: "utf-8" }
    %meta{ content: "IE=edge", "http-equiv" => "X-UA-Compatible" }
    %meta{ content: "width=device-width, initial-scale=1", name: "viewport" }
    %title Canary Tracker

    = javascript_include_tag "https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js", "https://oss.maxcdn.com/respond/1.4.2/respond.min.js"

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-inverse.navbar-fixed-top{role: "navigation"}
      .container
        .navbar-header= link_to "Canary", "/", class: "navbar-brand"
        #navbar.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li.active= link_to 'Home', '/'
            - if current_user
              %li= link_to 'Sign Out', signout_path, method: :post
            - else
              %li= link_to 'Sign In', '/auth/twitter'

    .container
      - flash.each do |name, msg|
        .alert.alert-dismissable{ class: "alert-#{ name == 'error' ? 'danger' : 'success' }", role: "alert" }
          %button.close{ type: "button", data: {dismiss: "alert"} }
            %span{ aria: {hidden: "true"} } &times;
            %span.sr-only Close
          = msg
      = yield
